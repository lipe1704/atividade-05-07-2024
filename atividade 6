/*Escreva um programa em C que leia uma letra e indique se ela Ã© uma vogal ou consoante. Utilize
uma estrutura de caso para resolver este problema.
*/
    #include <stdio.h>
    #include <ctype.h>
    int main (){
        char a1;
        printf ("Informe uma letra");
        scanf ("%c", &a1);
        if (isalpha(a1)){
            switch (a1){
                case 'a':
                printf ("vogal");
                break;
                case 'e':
                printf ("vogal");
                break;
                case 'i':
                printf ("vogal");
                break;
                case 'o':
                printf ("vogal");
                break;
                case 'u':
                printf ("vogal");
                break;
                default:
                printf ("Consoante");
                break;
            }
        }else{
            printf ("ERRO");
        }
    }
